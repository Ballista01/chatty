<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contactItemLayout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/friend_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/avatar_background_circle"
        android:cropToPadding="true"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="D"
        android:textColor="#555555"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">D</TextView>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="sample contact"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/friend_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="30dp"
        tools:layout_conversion_absoluteWidth="392dp" />

    <View
        android:id="@+id/contact_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BA000000"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_conversion_absoluteHeight="10dp"
        tools:layout_conversion_absoluteWidth="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
